<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creativedrewy.nativ">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NATIVApp"
        android:allowBackup="true"
        android:icon="@mipmap/nativ_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nativ_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NATIV">

        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NATIV.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>